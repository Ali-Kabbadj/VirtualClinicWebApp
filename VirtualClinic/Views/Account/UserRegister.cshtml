@model VirtualClinic.ViewModels.RegisterViewModel



<link rel="stylesheet" type="text/css" href="/account/css/UserRegister/montserrat-font.css">
<link rel="stylesheet" type="text/css" href="/account/css/UserRegister/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
<!-- Main Style Css -->
<link rel="stylesheet" href="/account/css/UserRegister/UserRegisterStyle.css" />
<script defer src="/js/country_state_city.js"></script>

<div class="form-v10">
    <div class="page-content">
        <div class="form-v10-content">
           
            <form asp-action="UserRegister" asp-controller="Account" method="post" class="form-detail" enctype="multipart/form-data">
                
                <div class="form-row hidden">
                    <input asp-for="Image" type='file' id="imgInp" hidden />
                </div>
                <div class="form-left">
                    <h2>Register</h2>
                    <div class="form-row">
                        <div class="d-inline">
                            <img id="Image" src="~/Images/img/NoImage.jpg" class="img" alt="">
                            <div class="pl-sm-4 pl-2" id="img-section">
                                <b>Profile Photo</b><br />
                                <button id="ImageButton" class="btn button"><b>Upload</b></button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row form-row-1">
                            <input asp-for="FirstName" type="text" id="first_name" class="input-text" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-row form-row-2">
                            <input asp-for="LastName" type="text" id="last_name" class="input-text" placeholder="Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <select asp-for="Gender">
                            <option value="" hidden>Select your Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                        <span class="select-btn">
                            <i class="zmdi zmdi-chevron-down"></i>
                        </span>
                    </div>
                    <div class="form-row form-row-1">
                        <input asp-for="BirthDate" type="date" name="dob" id="Birthday" placeholder="MM/DD/YYYY">
                        <span asp-validation-for="BirthDate"  class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <input asp-for="IdCard" placeholder="EE55555">
                        <span asp-validation-for="IdCard" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-row form-row-1">
                            <input asp-for="Password" type="password" placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-row form-row-2">
                            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm your password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="form-right">
                    <h2></h2>

                    <div class="form-row">
                        <select asp-for="Country" class="countries" id="countryId">
                            <option hidden value="">Select your Country</option>
                        </select>
                        <span class="select-btn">
                            <i class="zmdi zmdi-chevron-down"></i>
                        </span>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <select asp-for="State" class="states" id="stateId">
                            <option hidden value="">Select your State</option>
                        </select>
                        <span class="select-btn">
                            <i class="zmdi zmdi-chevron-down"></i>
                        </span>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <select asp-for="City" class="cities" id="cityId">
                            <option hidden value="">Select your City</option>
                        </select>
                        <span class="select-btn">
                            <i class="zmdi zmdi-chevron-down"></i>
                        </span>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <input asp-for="Adress" type="text" placeholder="Adress">
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <input asp-for="PhoneNumber" type="tel" id="phone" class="phone" placeholder="+2126 000-000-00">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    @if (ViewBag.IsDoctor != null)
                    {
                        @if (ViewBag.IsDoctor)
                        {
                            <div class="form-row" id="lang">
                                <input asp-for="Specialist" type="text" class="bg-light form-control" placeholder="Your Medical speciality">
                                <span asp-validation-for="Specialist" class="text-danger"></span>
                            </div>

                            <div class="form-row" id="lang">

                                <input asp-for="Price" type="number" class="bg-light form-control" placeholder="The amount you charge">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                        }
                    }

                    <div class="form-row">
                        <input asp-for="Email" type="email" id="your_email" class="input-text" placeholder="Email@exemple.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-row-last">
                        <input type="submit" value="register">
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<script defer src="~/js/country_state_city.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $('#ImageButton').click(function (e) {
        e.preventDefault();

        $('#imgInp').click();

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#Image').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            readURL(this);
        });
    });


</script>