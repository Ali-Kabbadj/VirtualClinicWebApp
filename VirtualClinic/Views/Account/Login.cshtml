@model VirtualClinic.ViewModels.LoginViewModel



<link rel="stylesheet" href="~/account/css/Login/LoginStyle.css" />


<form method="post" class="login" style="background :url(../images/logos/logocolor.png)  no-repeat bottom right">
    <h1> Login</h1>
    <input asp-for="Email" type="email" placeholder="Exemple@Email.com">
    <input asp-for="Password" type="password" placeholder="**********">
    <p>Remember Me<input style="margin-left:10px;" asp-for="RememberMe" type="checkbox" name="Remember Me" value="" /></p>
    <button asp-action="Login" asp-controller="Account">Login</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
